<section class="py-5 text-center container">


<h1>Lista de Carros</h1>

<hr>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Modelo</th>
      <th>Ano</th>
    </tr>
  </thead>
  <tbody>
    <% @carros.each do |carro| %>
      <tr>
        <td><%= carro.id%></td>
        <td><%= carro.nome %></td>
        <td><%= carro.modelo %></td>
        <td><%= carro.ano %></td>
    <td style="width: 80px;"><%= link_to "Mostrar", carros_show_path(carro.id), "class":"btn btn-primary" %></td>

      </tr>
    <% end %>
  </tbody>
</table>
</section>
